<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tekstura"
            android:layout_below="@id/toolbar_actionbar"/>

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/person_rectangle"
            android:elevation="10dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_black_24dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/delete_student"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/student_edit"
                android:background="@drawable/ic_delete_forever_black_24dp" />

            <ImageButton
                android:id="@+id/student_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:background="@drawable/ic_create_black_24dp" />

            <TextView
                android:id="@+id/student_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Вадим Иванов"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_middle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Александрович"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_profile_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Дата рождения: 29.04.2003"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorLightPrimary"
                android:textSize="20sp"
                android:layout_below="@+id/student_profile_middle_name"/>

            <TextView
                android:id="@+id/student_profile_group_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Номер группы: 113"
                android:gravity="center"
                android:textColor="#FFCDD2"
                android:textSize="20sp"
                android:layout_below="@+id/student_profile_birth_date"/>

            <TextView
                android:id="@+id/student_profile_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Факультет: математика"
                android:gravity="center"
                android:textColor="#FFCDD2"
                android:textSize="20sp"
                android:layout_below="@+id/student_profile_group_id"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toolbar_actionbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/back"
                android:background="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/student_profile_id"
                android:text="1245"
                android:textColor="#fff"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

